    </ReadLinesFromFile>
    <Message Text="----Log File Start----" />
    <Message Text="@(LogOut->'%(Identity)', '%0a%0d')" />
    <Message Text="----Log File End----" />
    <Error Condition="'@(LogOut)'!=''" Text="Log file size is greater than 0" />
  </Target>
  
</Project>
