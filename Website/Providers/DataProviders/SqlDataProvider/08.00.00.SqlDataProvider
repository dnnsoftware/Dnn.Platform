		ALTER TABLE {databaseOwner}{objectQualifier}ContentTypes 
			ADD [Description] [nvarchar(1000)] NOT NULL CONSTRAINT [DF_{objectQualifier}ContentTypes_Description] DEFAULT ('')
    END 
GO

