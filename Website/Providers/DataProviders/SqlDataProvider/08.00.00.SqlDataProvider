   BEGIN
		ALTER TABLE {databaseOwner}{objectQualifier}ContentTypes 
			ADD [IsDynamic] [bit] NOT NULL CONSTRAINT [DF_{objectQualifier}ContentTypes_IsDynamic] DEFAULT (0)
    END 
GO

